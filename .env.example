# Legal Prejudice Analysis Project - Environment Configuration
# Copy this file to .env and modify as needed

# Docker Registry Configuration
DOCKER_REGISTRY=
TAG=latest

# Web Server Configuration
EXTERNAL_PORT=8080
EXTERNAL_SSL_PORT=8443
ALLOWED_ORIGINS=*

# Database Configuration
DB_USER=postgres
DB_PASSWORD=change_this_password
DB_NAME=legal_prejudice

# API Server Configuration
API_SECRET_KEY=change_this_secret_key
LOG_LEVEL=info
ENABLE_DOCS=true

# Web Frontend Configuration
NODE_ENV=production
API_URL=http://api-server:5000

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_CASE_MANAGEMENT_INTEGRATION=true

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@example.com

# Authentication (optional)
AUTH_PROVIDER=local
JWT_SECRET=change_this_jwt_secret
JWT_EXPIRATION=86400

# External Services (optional)
LEXISNEXIS_API_KEY=
CASETEXT_API_KEY=
WESTLAW_API_KEY=